<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginTop="1dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/backdrop_path"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:foregroundTint="@color/colorPrimary"
            android:foregroundTintMode="add"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poster_path"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:background="@color/colorAccent"
                android:src="@drawable/poster"
                android:padding="1dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/mTextGroupCardList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toEndOf="@+id/poster_path"
                android:layout_alignBottom="@+id/poster_path"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:paddingEnd="10dp"
                android:layout_marginEnd="2dp">

                <com.example.cardviewdemo.TextViewPlus
                    android:id="@+id/original_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="TITLE TITLE TITLE"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    app:customFont="fonts/QuattrocentoSans-Regular.ttf"/>
                <com.example.cardviewdemo.TextViewPlus
                    android:id="@+id/release_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:background="@android:color/transparent"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="2005"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    app:customFont="fonts/Roboto-Regular.ttf"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vote_average"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/textview_design_circle"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:text="2.0"
                android:textSize="12sp"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:elegantTextHeight="false"
                android:layout_margin="10dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>