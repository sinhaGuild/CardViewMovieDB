<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardviewdemo"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gentleman_icon"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cardviewdemo.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".splash.SplashActivity">
        </activity>
        <activity
            android:name="com.example.cardviewdemo.CardViewDetailActivity"
            android:label="card_detail_view"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".PersonDetailActivity"
            android:label="person_detail_view"
            android:parentActivityName=".CardViewDetailActivity"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>
