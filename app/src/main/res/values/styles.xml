<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">#80FFFFFF</item>
        <item name="floatingSearch_viewTextColor">@android:color/white</item>
        <item name="floatingSearch_hintTextColor">@android:color/white</item>
        <item name="floatingSearch_dividerColor">@color/colorPrimary</item>
        <item name="floatingSearch_clearBtnColor">@android:color/white</item>
        <item name="floatingSearch_leftActionColor">@android:color/white</item>
        <item name="floatingSearch_menuItemIconColor">@android:color/white</item>
        <item name="floatingSearch_suggestionRightIconColor">@android:color/white</item>
        <item name="floatingSearch_actionMenuOverflowColor">@android:color/white</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#FFF</item>
        <!--<item name="android:windowContentTransitions">true</item>-->
        <!-- specify shared element transitions -->
        <!--<item name="android:windowSharedElementEnterTransition">@transition/activity_slide</item>-->
        <!--<item name="android:windowSharedElementExitTransition">@transition/activity_fade</item>-->
    </style>

</resources>
