<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@drawable/backdrop"-->
    <!--android:backgroundTint="@android:color/holo_red_dark"-->
    <!--android:backgroundTintMode="multiply"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/backdrop_path_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.4"
            android:backgroundTint="@android:color/holo_red_dark"
            android:backgroundTintMode="add"
            android:src="@drawable/backdrop" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/poster_path_person"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:elevation="20dp"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/poster" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="TITLE"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/name_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:text="genre details here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:customFont="fonts/Roboto-Regular.ttf" />


        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_person"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="GENRE"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/age_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_tv"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:text="genre details here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:customFont="fonts/Roboto-Regular.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/born_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_person"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="LANGUAGE"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/born_in_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/born_in_tv"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:text="language details here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:customFont="fonts/Roboto-Regular.ttf" />


        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/production_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/born_in_person"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="STUDIO"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/production_company_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/production_tv"
            android:layout_toRightOf="@+id/poster_path_person"
            android:paddingLeft="10dp"
            android:text="studio details here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:customFont="fonts/Roboto-Regular.ttf" />


        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster_path_person"
            android:gravity="center|center_vertical"
            android:paddingTop="20dp"
            android:text="@string/excerpt_example"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:customFont="fonts/Gabrielle.ttf" />


        <WebView
            android:id="@+id/video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagline"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />
        <!--<Button-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:id="@+id/youtube_play_button"-->
        <!--android:background="@drawable/ic_launcher"-->
        <!--android:gravity="center"-->
        <!--android:layout_below="@+id/tagline"-->
        <!--android:tint="@android:color/white"/>-->

        <!--<include layout="@layout/fragment_video"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/tagline"></include>-->

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/bio_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_view"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="PLOT"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/bio_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_tv"
            android:maxLines="100"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:scrollbars="vertical"
            android:text="movie plot here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:customFont="fonts/Roboto-Regular.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/cast_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_person"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="CAST"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.GridViewPlus
            android:id="@+id/gridView_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cast_tv"
            android:layout_margin="5dp"
            android:clickable="true"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/crew_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gridView_cast"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="CREW"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.GridViewPlus
            android:id="@+id/gridView_crew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/crew_tv"
            android:layout_margin="5dp"
            android:clickable="true"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/reviews_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gridView_crew"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="REVIEWS"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/reviews_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/reviews_tv"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="REVIEWS"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:customFont="fonts/Roboto-Regular.ttf" />


        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/collection_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviews_detail"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="COLLECTIONS"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/cover.ttf" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/collections_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:customFont="fonts/Gabrielle.ttf" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/collections_backdrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/collection_tv"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/backdrop" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/collections_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@+id/collection_tv"
            android:layout_margin="30dp"
            android:background="@color/colorAccent"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/poster" />

        <com.example.cardviewdemo.TextViewPlus
            android:id="@+id/collection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collections_backdrop"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="2dp"
            android:maxLines="100"
            android:scrollbars="vertical"
            android:text="collections title"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:customFont="fonts/Roboto-Bold.ttf" />


